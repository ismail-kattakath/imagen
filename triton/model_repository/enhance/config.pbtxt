# Triton Model Configuration for Image Enhancement Pipeline
# Uses Python backend with SD Refiner model

name: "enhance"
backend: "python"

# Maximum batch size - limited by GPU memory for diffusion models
max_batch_size: 2

input [
  {
    name: "IMAGE"
    data_type: TYPE_UINT8
    dims: [-1]
  },
  {
    name: "PROMPT"
    data_type: TYPE_STRING
    dims: [1]
    optional: true
  },
  {
    name: "STRENGTH"
    data_type: TYPE_FP32
    dims: [1]
    optional: true
  }
]

output [
  {
    name: "OUTPUT_IMAGE"
    data_type: TYPE_UINT8
    dims: [-1]
  }
]

dynamic_batching {
  preferred_batch_size: [1, 2]
  max_queue_delay_microseconds: 200000  # 200ms - longer for heavy model
  preserve_ordering: true
}

instance_group [
  {
    count: 1
    kind: KIND_GPU
    gpus: [0]
  }
]

parameters: {
  key: "model_id"
  value: {string_value: "stabilityai/stable-diffusion-xl-refiner-1.0"}
}

version_policy: {latest: {num_versions: 1}}
