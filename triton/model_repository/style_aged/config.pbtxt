# Triton Model Configuration for Aged/Vintage Style Pipeline
# Uses Python backend with Stable Diffusion v1.5 model

name: "style_aged"
backend: "python"

# Maximum batch size - Triton will batch up to this many requests
max_batch_size: 2

# Input: Raw image bytes
input [
  {
    name: "IMAGE"
    data_type: TYPE_UINT8
    dims: [-1]  # Variable length byte array
  },
  {
    name: "PROMPT"
    data_type: TYPE_STRING
    dims: [1]
    optional: true
  },
  {
    name: "STRENGTH"
    data_type: TYPE_FP32
    dims: [1]
    optional: true
  }
]

# Output: Processed image bytes (PNG)
output [
  {
    name: "OUTPUT_IMAGE"
    data_type: TYPE_UINT8
    dims: [-1]  # Variable length byte array
  }
]

# Dynamic batching configuration
dynamic_batching {
  # Smaller batch for memory-intensive diffusion models
  preferred_batch_size: [1, 2]
  
  # Maximum time to wait for a batch to form (microseconds)
  max_queue_delay_microseconds: 100000
  
  # Preserve ordering of responses
  preserve_ordering: true
}

# Instance configuration
instance_group [
  {
    count: 1
    kind: KIND_GPU
    gpus: [0]
  }
]

# Model parameters
parameters: {
  key: "model_id"
  value: {string_value: "runwayml/stable-diffusion-v1-5"}
}

# Version policy - use latest
version_policy: {latest: {num_versions: 1}}
